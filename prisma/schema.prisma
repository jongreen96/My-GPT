generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversations {
  id        String     @id
  userId    String
  subject   String
  settings  Json
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Messages  Messages[]
}

model Messages {
  id             Int           @id @default(autoincrement())
  conversationId String
  conversation   Conversations @relation(fields: [conversationId], references: [id])
  role           String
  images         String[]
  content        String
  credits        Int
  createdAt      DateTime      @default(now())
}

model Users {
  id                String   @id
  credits           Int
  defaultSettings   Json
  model             String
  imageModel        String
  max_tokens        Int?
  temperature       Float
  response_format   Boolean
  frequency_penalty Float
  presence_penalty  Float
  top_p             Float
  system_message    String
  high_res_vision   Boolean
  n                 Int
  size              String
  style             String
  quality           String
  createdAt         DateTime @default(now())
}

model Transactions {
  id        Int      @id @default(autoincrement())
  userId    String
  total     Int
  credits   Int
  createdAt DateTime @default(now())
}
